{
  "manifest_version": 3,
  "name": "Tweet Manger",
  "version": "0.1",
  "description": "Listens to specific requests and obtains information",
  "permissions": [
    "webRequest",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "src/content/contentScript.js"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "32": "src/icons/icon32.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon16.png",
    "32": "src/icons/icon32.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/contentScriptInjector.js",
        "src/utils/tweetDeleter.js",
        "src/utils/storage.js",
        "src/utils/likeManager.js",
        "src/utils/requestInterceptor.js",
        "src/utils/cookieUtils.js",
        "src/grammer/textBoxDetector.js",
        "src/grammer/sentenceImprover.js",
        "src/services/ollamaService.js",
        "src/utils/debounce.js"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ]
}